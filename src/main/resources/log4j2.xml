<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="Info">
    <Appenders>
        <Console name="Console">
            <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{1} - %m%n" />
        </Console>
        <RollingFile name="myFile" fileName="C:/Users/vbokh/Desktop/authorization_project/log/logInfo.log" filePattern="/log/logInfo-%i.log">
            <PatternLayout pattern="%d{yyy-MM-dd HH:mm:ss.SSS} [%t] %-5level %logger{36} - %m%n"/>
            <Policies>
                <SizeBasedTriggeringPolicy size = "10 KB"/>
            </Policies>
        </RollingFile>
    </Appenders>
    <Loggers>
        <Root level="info">
            <AppenderRef ref="Console" />
            <AppenderRef ref="myFile"/>
        </Root>
    </Loggers>
</Configuration>